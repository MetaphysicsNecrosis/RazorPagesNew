@page
@model RazorPagesNew.Pages.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<h2>Log in</h2>

<form method="post">
    <div class="form-group">
        <label for="Input_Email">Email</label>
        <input type="email" id="Input_Email" name="Input.Email" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Input_Password">Password</label>
        <input type="password" id="Input_Password" name="Input.Password" class="form-control" required />
    </div>

    <div class="form-group">
        <input type="checkbox" id="Input_RememberMe" name="Input.RememberMe" />
        <label for="Input_RememberMe">Remember me</label>
    </div>

    <button type="submit" class="btn btn-primary">Log in</button>
</form>

<p>
    Don't have an account? <a href="/Account/Register">Sign up</a>
</p>
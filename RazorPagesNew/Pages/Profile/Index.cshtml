@page
@model RazorPagesNew.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "Мой профиль";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Информация о пользователе
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong> @User.Identity?.Name</p>
                    <p><strong>Роли:</strong></p>
                    <ul>
                        @if (User.IsInRole("Admin"))
                        {
                            <li>Администратор</li>
                        }
                        @if (User.IsInRole("HR"))
                        {
                            <li>HR-специалист</li>
                        }
                        @if (User.IsInRole("Evaluator"))
                        {
                            <li>Оценщик</li>
                        }
                        @if (User.IsInRole("User"))
                        {
                            <li>Пользователь</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Безопасность аккаунта
                </div>
                <div class="card-body">
                    <p><a asp-page="/Account/ChangePassword">Изменить пароль</a></p>
                </div>
            </div>
        </div>
    </div>
</div>